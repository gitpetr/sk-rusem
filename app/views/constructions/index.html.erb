
<div class="container">
  <div class="row whitefone">

<h1>Строительные работы</h1>

 
    <% @constructions.each do |construction| %>
      <p><%= construction.title %> </p>
       <%= image_tag construction.image.url(:thumb) %>
        <p>  <%= link_to truncate(construction.body, length: 1000), construction %> </p>
 

        <% if user_signed_in? %>
        <% if current_user.is_admin %>
            <td><%= link_to 'Изменить', edit_construction_path(construction), class: "btn btn-warning btn-sm" %></td>
            <td><%= link_to 'Удалить', construction, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
            <% end %>
      
    <% end %>
 

<br>

        <% if user_signed_in? %>
        <% if current_user.is_admin %>
<%= link_to "Выйти", destroy_user_session_path, method: :delete, class: "btn btn-default btn-sm pull-right" %>
        
<span class="pull-right">&nbsp;</span>
<%= link_to 'Добавить статью', new_construction_path, class: "btn btn-success btn-sm pull-right" %>

            <% end %>
            <% end %>
