<div class="row whitefone">
<%= form_for(@price) do |f| %>
  <% if @price.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@price.errors.count, "Ошибка") %> , не может быть сохранено:</h2>

      <ul>
      <% @price.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Название' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :tonnag, 'Тоннаж' %><br>
    <%= f.text_field :tonnag %>
  </div>
  <div class="field">
    <%= f.label :cost, 'Цена' %><br>
    <%= f.number_field :cost %>
  </div><br>
  <div class="actions">
    <%= f.submit 'сохранить' %>
  </div>
<% end %>
</div>